// below is the artist and commedian registration form on the left and band on the right
.regesteration-band
  form.form-left(action='/registerband/bandregistration' name='form2' method='post' enctype='multipart/form-data')
    h1#band-tittle Band Registration
    .div-iputs
      label(for='bandname')
      input#bandname.long-input2(type='text' name='bandname' placeholder='Band Name')
    small#id1
    .div-iputs
      label(for='bandhome')
      input#bandhome.long-input2(type='text' name='home' placeholder='Band Home')
    small#id2
    .div-iputs
      label(for='slogan')
      input#slogan.long-input2(type='text' name='bandslogan' placeholder='Slogan')
    small#id3
    .div-iputs
      label(for='bandicon')
      input#bandicon.file-btn(type='file' name='bandicon')
    .div-iputs
      label(for='sponsers')
      input#sponsers.long-input2(type='text' name='bandsponsers' placeholder='Names Of sponsers if any')
    small#id4
    .div-iputs
      label(for='numberofmembers')
      input#numberofmembers.short-input2(type='number' name='numberofmembers' placeholder='Number Of Members')
    small#id5
    .div-iputs
      label(for='members')
      input#members.long-input2(type='text' name='members' placeholder='Names Of Members')
    small#id6
    .div-iputs
      label(for='email')
      input#email.long-input2(type='email' name='email' placeholder='Email')
    small#id7
    .div-iputs
      label(for='password')
      input#password.long-input2(type='password' name='password' placeholder='Password')
    .div-iputs
      select#role.long-input(name='role')
        
        option(value='band') band
    small#id8
    .div-iputs
      input.cuncle-btn(type='reset' value='Cancel')
      input#myform2.submt-btn2(onclick='validateband()' type='button' value='Create Account')
