div.form-row
  div.updatepic
    img(src='/'+comedian.photo)
form.updatef(method="post" action="/update/comedianupdate/"+comedian.email )
        table.table
            thead
                tr
                    th Stage name
                    td 
                       input.form-control( value=comedian.stagename name ="stagename")
              
                tr
                    th Email
                    td 
                        input.form-control(value=comedian.email name ="email")
                
                tr
                    th Contact
                    td 
                        input.form-control(value=comedian.contact name ="contact")
                tr
                    th District
                    td 
                        select.form-control( name="place")  
                            option(value="Mbarara" selected = comedian.place === "Mbarara"  ) Mbarara
                            option(value="Kampala" selected = comedian.place === "Kampala" ) Kampala
                            option(value="Gulu" selected = comedian.place === "Gulu") Gulu
                            option(value="Wakiso" selected = comedian.place === "Wakiso" ) Wakiso
                            option(value="Jinja" selected = comedian.place === "Jinja" ) Jinja
                            option(value="Masaka" selected = comedian.place === "Masaka" ) Masaka
                            option(value="Mbale" selected = comedian.place === "Mbale" ) Mbale
                tr
                    td(colspan=2)
                        button.btn.btn-dark.update-btn(type="submit") Update

